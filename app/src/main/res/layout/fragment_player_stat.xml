<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stats.PlayerStatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_fn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/title_ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/title_player_solved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solved Num"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/title_player_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created Num"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/title_ave_solved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solved Average"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_player_stat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>