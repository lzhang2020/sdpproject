<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stats.ScrambleStatFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="30dp"
            android:text="Identifier"
            android:textAlignment="center"
            android:visibility="visible" />
        <TextView
            android:id="@+id/title_solved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solved"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/title_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creator"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/title_total_solved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Solved"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_scrambble_stat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>